@model DotNetAndReactSample.Models.GoldToZlotyPriceRecordCollection
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "View";
}
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <h1>View</h1>

    <table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Records[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Records[0].Price)s
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Records)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div >
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            <a asp-action="GoldPriceList" asp-controller="Stock" asp-route-page="@i">@i</a>
        }

    </div>
</body>
